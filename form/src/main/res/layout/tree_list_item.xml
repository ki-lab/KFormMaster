<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/listItemPuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:text="â€¢"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toStartOf="@id/removeButton"
        app:layout_constraintStart_toEndOf="@id/listItemPuce"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/listItem"
        android:tint="@android:color/darker_gray"
        android:src="@drawable/ic_close_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
